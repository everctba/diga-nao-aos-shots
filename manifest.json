{
    "manifest_version": 3,
    "name": "Diga NÃO ao Shorts",
    "version": "1.1.0",
    "description": "Remove a seção de Shorts de quase todas as visualizações do YouTube. Agora com opção liga/desliga.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Configurar Shorts"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}